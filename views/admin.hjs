<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin Center</title>
    <!-- bootstrap cdn css -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Anton|Bitter|Oswald" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!-- jQuery is required for Bootsrtap JS -->
    <script src="https://code.jquery.com/jquery-1.12.4.min.js" integrity="sha256-ZosEbRLbNQzLpnKIkEdrPv7lOy9C27hHQ+Xp8a4MxAQ=" crossorigin="anonymous"></script>
    <script type="text/javascript" src="/javascripts/bootstrap.min.js">

    </script>
  </head>
  <body>
    <!-- Header -->
    <div class="page-header">
      <h1>Welcome Admin <small>
        {{#info}}
          {{info}}
        {{/info}}
        {{^info}}
          How is your day going?
        {{/info}}
      </small></h1>
    </div>

    <!-- Dashboard -->
    <div class="row">
      <!-- Side Navigation for Admin actions -->
      <div class="col-md-3 col-lg-3 col-sm-9 side-nav-fixed">
        <ul class="nav nav-pills nav-stacked">
          <li role="presentation"><a href="/admin/article/new"><i class="fa fa-plus-circle" aria-hidden="true"></i>
             Add Blog Article</a>
          </li>
          <li role="presentation"><a href="/"><i class="fa fa-home" aria-hidden="true"></i>
            Home</a>
          </li>
          <li role="presentation"><a href="/admin/logout"><i class="fa fa-power-off" aria-hidden="true"></i>
            Logout</a>
          </li>
        </ul>
      </div>
      <div class="col-md-9 col-lg-9 col-sm-9 manager">
        <!-- Display Table -->
        <section class="articles">
          <h2>Blog Articles</h2>
          <table class="table">
            <thead>
              <tr>
                <th>Author</th>
                <th>Title</th>
                <th>Category</th>
                <th>Picture</th>
                <th>Date Posted</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              {{#articles}}
                <tr>
                  <td>{{author}}</td>
                  <td>{{title}}</td>
                  <td>{{category}}</td>
                  <td>{{imgOGName}}</td>
                  <td>{{dateSent}}</td>
                  <td><a href="/admin/article/update/{{_id}}"><button class="btn btn-primary">Edit</button></a>
                    <a href="/admin/article/delete/{{_id}}"><button class="btn btn-danger">Delete</button></a>
                  </td>
                </tr>
              {{/articles}}
            </tbody>
          </table>
        </section>
        <div class="row">
          <section class="uploads">
            <div class="col-md-6 multimedia">
              <h2>Multimedia Uploads</h2>
              <!-- form for uploads -->
              <form class="file-upload" action="/multimedia/img" method="post" enctype="multipart/form-data">
                <input type="file" name="multimediaImg">
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
              <!-- list of uploads and actions -->
              <table class="table">
                <thead>
                  <tr>
                    <th>File</th>
                    <th>Actions</th>
                  </tr>
                  <tbody>
                    {{#mmImgs}}
                    <tr>
                      <td>{{originalname}}</td>
                      <td>
                        <a href="#"><button class="btn btn-danger">Delete</button></a>
                      </td>
                    </tr>
                    {{/mmImgs}}
                  </tbody>
                </thead>
              </table>
            </div>
            <div class="col-md-6 home-slider">
              <h2>Home Page Image Slider</h2>
              <p>Maximum of 5 photos.</p>
              <form class="file-upload" action="/home/img" method="post" enctype="multipart/form-data">
                <input type="file" name="homeImg">
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
              <table class="table">
                <thead>
                  <tr>
                    <th>File</th>
                    <th>Actions</th>
                  </tr>
                  <tbody>
                    {{#homeImgs}}
                    <tr>
                      <td>{{originalname}}</td>
                      <td>
                        <a href="#"><button class="btn btn-danger">Delete</button></a>
                      </td>
                    </tr>
                    {{/homeImgs}}
                  </tbody>
                </thead>
              </table>
            </div>
          </section>
        </div>
      </div>
    </div>


  </body>
</html>
